<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainPage.MainPage">
    <LinearLayout
        android:id="@+id/bgtop"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bgcorona">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/coguardlogo"
            android:layout_gravity="center"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="7dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/cardv"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="200dp"
        android:layout_below="@+id/bgtop">
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#fff"
            android:layout_width="150dp"
            android:layout_marginTop="5dp"
            android:layout_height="170dp"
            android:layout_marginLeft="45dp">
            <ImageView
                android:layout_width="110dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_height="110dp"
                android:src="@drawable/doc"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Randevu Al"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:layout_marginTop="110dp"
                android:layout_marginLeft="26dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Görüntülü Görüşme Başlat"
                android:textSize="11sp"
                android:textColor="@color/blue"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="10dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#fff"
            android:layout_width="150dp"
            android:layout_marginTop="5dp"
            android:layout_height="170dp"
            android:layout_marginLeft="45dp">
            <ImageView
                android:layout_width="75dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_height="75dp"
                android:src="@drawable/send"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soru Gönder"
                android:textSize="20sp"
                android:textColor="@color/blue"
                android:layout_marginTop="110dp"
                android:layout_marginLeft="26dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aklına Takılan Bir Soru Gönder"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@color/blue"
                android:layout_marginTop="140dp"
                />
        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/cardv">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Takvim"
            android:textColor="@color/blue"
            android:textSize="22sp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/cardv"
            android:text="Henüz Alınan Randevu Yok"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:layout_marginLeft="100dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/callender"/>

    </LinearLayout>







</RelativeLayout>
